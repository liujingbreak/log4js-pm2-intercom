{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module":"commonjs",
		"target":"es2016",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"skipLibCheck": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"lib": ["es2016", "es2015"],
		"pretty": true
	},
	"include": ["ts/**/*.ts"]
}
